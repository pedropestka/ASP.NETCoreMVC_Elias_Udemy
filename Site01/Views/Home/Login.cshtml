@{
    Layout = "_Layout";
}
@{
    ViewBag.Title = "Palavra - Cadastrar";
}
@if (TempData["MensagemErro"] != null)
{
<div class="alert alert-danger" role="alert">
    @TempData["MensagemErro"]
</div>
}


<form method="post" action="/home/login">
    <div class="form-group">
        <label for="email">E-Mail</label>
        <input type="text" name="email" value="" class="form-control" id="email" placeholder="Digite o seu e-mail">
        @Html.ValidationMessage("email")
    </div>

    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="text" name="senha" value="" class="form-control" id="senha" placeholder="Digite sua senha">
        @Html.ValidationMessage("senha")
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
@ViewBag.Mensagem